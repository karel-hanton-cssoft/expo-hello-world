{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/plan.schema.json",
  "title": "Plan",
  "allOf": [
    { "$ref": "./task.schema.json" },
    {
      "type": "object",
      "required": ["accessKey", "users"],
      "properties": {
        "users": {
          "type": "object",
          "description": "Dictionary of users keyed by user ID (e.g., 'user-1', 'user-2')",
          "additionalProperties": { "$ref": "./user.schema.json" }
        },
        "accessKey": { "type": "string" }
      },
      "additionalProperties": true
    }
  ]
}
